# Production Environment Configuration
# Copy this to .env.production for production deployment

# Application Configuration
NODE_ENV=production
PORT=3000
APP_NAME=AI DPR System
APP_VERSION=1.0.0

# CORS Configuration
CORS_ORIGIN=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-here-at-least-64-characters-long
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,csv,jpg,jpeg,png,gif

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000

# Email Configuration (Optional)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@your-domain.com

# Analytics Configuration
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# Cache Configuration
CACHE_TTL=3600
ENABLE_CACHE=true

# Monitoring Configuration
ENABLE_MONITORING=true
SENTRY_DSN=your-sentry-dsn-here

# Performance Configuration
COMPRESSION_LEVEL=6
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30